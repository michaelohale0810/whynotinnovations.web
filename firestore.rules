rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection
    match /admins/{adminId} {
      // Users can read their own admin document to check if they're admin
      allow read: if request.auth != null && request.auth.uid == adminId;
      // Only existing admins can create new admin documents
      allow create: if isAdmin();
      // Only existing admins can update admin documents
      allow update: if isAdmin();
      // Only existing admins can delete admin documents
      allow delete: if isAdmin();
    }
    
    // Innovations collection
    match /innovations/{innovationId} {
      // Public read access - anyone can read innovations
      allow read: if true;
      
      // Only admins can create innovations
      allow create: if isAdmin() && 
                       request.resource.data.keys().hasAll(['title', 'description', 'status', 'createdAt', 'updatedAt']);
      
      // Only admins can update innovations
      allow update: if isAdmin();
      
      // Only admins can delete innovations
      allow delete: if isAdmin();
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Participants can create messages
      allow create: if request.auth != null && 
                       request.resource.data.createdBy == request.auth.uid &&
                       request.resource.data.keys().hasAll(['type', 'content', 'createdBy', 'createdAt']);
      
      // Users can read their own messages, admins can read all messages
      allow read: if request.auth != null && 
                     (resource.data.createdBy == request.auth.uid || isAdmin());
      
      // Users can update their own messages to archive them, admins can update any message
      allow update: if request.auth != null && 
                      ((resource.data.createdBy == request.auth.uid && 
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['archived'])) ||
                       isAdmin());
      
      // Only admins can delete messages
      allow delete: if isAdmin();
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

